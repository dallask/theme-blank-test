    "lint-staged": "^13.1.0",
    "malihu-custom-scrollbar-plugin": "^3.1.5",
    "mini-css-extract-plugin": "^2.7.2",
    "node-sass-glob-importer": "^5.3.2",
    "open-cli": "^7.1.0",
    "pa11y": "^6.2.3",
