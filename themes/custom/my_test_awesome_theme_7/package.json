{
  "name": "emulsify-drupal",
  "version": "1.0.0",
  "description": "Storybook development + Webpack Build + Drupal 8 theme",
  "keywords": [
    "component library",
    "design system",
    "drupal",
    "pattern library",
    "storybook",
    "styleguide"
  ],
  "author": "Four Kitchens <shout@fourkitchens.com>",
  "license": "ISC",
  "scripts": {
    "a11y": "npm run storybook-build && ./scripts/a11y.js -r",
    "build": "npm run tokens:all && webpack --config ./webpack/webpack.prod.js",
    "commit": "git-cz",
    "coverage": "npm run test && open-cli .coverage/lcov-report/index.html",
    "develop": "concurrently --raw \"npm run webpack\" \"npm run storybook\"",
    "format": "npm run lint-fix; npm run prettier-fix",
    "lint": "npm run lint-js; npm run lint-styles",
    "lint-fix": "npm run lint-js -- --fix; npm run lint-styles -- --fix",
    "lint-js": "eslint --no-error-on-unmatched-pattern ./components",
    "lint-staged": "lint-staged",
    "lint-styles": "stylelint './components/**/*.scss'",
    "postinstall": "npx patch-package && cp-cli ./webpack/config.default.js ./webpack/config.js",
    "prepare": "[ -d '.git' ] && (husky install) || true",
    "prettier": "prettier --ignore-unknown \"./components/**/*.{js,yml,scss,md}\"",
    "prettier-fix": "prettier --write --ignore-unknown \"./components**/*.{js,yml,scss,md}\"",
    "semantic-release": "semantic-release",
    "storybook": "npm run tokens:all && storybook dev --ci -p 6006",
    "storybook-build": "npm run build && storybook build -o .out",
    "storybook:build": "npm run storybook-build",
    "storybook-deploy": "storybook_to_ghpages -o .out",
    "test": "jest --coverage",
    "twatch": "jest --no-coverage --watch --verbose",
    "webpack": "webpack --watch --config ./webpack/webpack.dev.js",
    "tokens:transform": "token-transformer ./tokens/src/figma.tokens.json ./tokens/dist/sd.tokens.json core,components --expandTypography=true",
    "tokens:build": "node ./tokens/tokensTransform.js",
    "tokens:all": "npm run tokens:transform && npm run tokens:build",
    "test:storybook": "test-storybook --no-cache",
    "test:storybook:watch": "test-storybook --watch",
    "storycap": "npx storycap http://localhost:6006"
  },
  "dependencies": {
    "@drupal/once": "^1.0.1",
    "@lottiefiles/lottie-player": "^2.0.4",
    "add-attributes-twig-extension": "^0.1.0",
    "bem-twig-extension": "^0.1.1",
    "graceful-fs": "^4.2.10",
    "js-yaml": "^4.1.0",
    "normalize.css": "^8.0.1",
    "postcss-scss": "^4.0.6",
    "puppeteer": "^22.11.0",
    "react-player": "^2.16.0",
    "regenerator-runtime": "^0.13.11",
    "replace-in-file": "^7.0.1",
    "resize-observer-polyfill": "^1.5.1",
    "storycap": "^5.0.0",
    "stylelint-selector-bem-pattern": "^2.1.1",
    "twig-drupal-filters": "^3.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-react": "^7.22.15",
    "@degjs/storybook-decorator-react-to-html": "^1.0.0",
    "@popperjs/core": "^2.11.8",
    "@semantic-release/github": "^10.0.3",
    "@storybook/addon-a11y": "^7.4.6",
    "@storybook/addon-actions": "^7.4.6",
    "@storybook/addon-docs": "^7.5.0",
    "@storybook/addon-essentials": "^7.4.6",
    "@storybook/addon-links": "^7.4.6",
    "@storybook/addon-mdx-gfm": "^7.4.6",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/html": "^7.4.6",
    "@storybook/html-webpack5": "^7.4.6",
    "@storybook/storybook-deployer": "^2.8.16",
    "@storybook/test-runner": "^0.15.1",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^9.1.2",
    "babel-preset-minify": "^0.5.2",
    "bootstrap": "^5.3.2",
    "breakpoint-sass": "^3.0.0",
    "browser-sync": "^2.29.3",
    "browser-sync-webpack-plugin": "^2.3.0",
    "chalk": "^5.2.0",
    "clean-webpack-plugin": "^4.0.0",
    "commitizen": "^4.2.6",
    "concurrently": "^7.6.0",
    "copy-webpack-plugin": "^11.0.0",
    "cp-cli": "^2.0.0",
    "css-loader": "^5.2.7",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.31.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.2.0",
    "eslint-plugin-prettier": "^4.2.1",
