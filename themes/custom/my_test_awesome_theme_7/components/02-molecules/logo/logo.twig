{% set data_analytics = {
  name: 'Logo',
  group: 'Logo',
}|mergeAlt(data_analytics) %}

{% embed "@base/06-common/_wrapper.twig" with {
  element_base_class: 'logo',
  element_attributes: test('Logo'),
} %}
  {% block element_content %}
    {% embed "@atoms/links/link/link.twig" with {
      link_base_class: 'logo__link',
      link_url: ds_variables.link.link.url|default(default_language_id == current_language_id ? '/' : '/' ~ current_language_id),
      link_attributes: link_attributes|default({}),
    } %}
      {% block link_content %}
        {% include "@atoms/images/image/responsive-image.twig" with {
          output_image_tag: true,
          image_src: directory ? '/' ~ directory ~ '/images/logo.png' : 'logo.png',
          image_attributes: {
            alt: image_alt|default('Logo'),
            'data-analytics-name': 'Logo',
          },
          responsive_image_blockname: 'logo',
          image_extra: ['img-fluid'],
        } %}
      {% endblock %}
    {% endembed %}
  {% endblock %}
{% endembed %}
