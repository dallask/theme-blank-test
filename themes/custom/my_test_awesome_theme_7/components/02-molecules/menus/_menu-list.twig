{% set list__base_class = menu_class %}
{% set list__modifiers = menu_modifiers %}
{% set list__blockname = menu_blockname %}
{% set list__addition_classes = list__addition_classes|default([])|merge(['list-unstyled']) %}

{# List #}
{% extends "@atoms/lists/list.twig" %}
{% block list__content %}
  {% include "@base/06-common/_twig_debug.twig" with { component_debug_path: _self} %}

  {% for item in items %}
    {% include "@molecules/menus/_menu-item.twig" with {
      list__item__base_class: item_base_class,
      list__item__modifiers: item_modifiers,
      list__item__blockname: item_blockname,
    } %}
  {% endfor %}
{% endblock %}
