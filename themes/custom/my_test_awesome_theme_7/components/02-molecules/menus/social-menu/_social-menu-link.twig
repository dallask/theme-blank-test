{% set link_url = item.url %}
{% set link_base_class = 'link' %}
{% set link_modifiers = item_modifiers %}
{% set link_blockname = menu_class %}
{% set link_extra = item.url.options.attributes['class']|default(['text-black']) %}
{% set link_attributes = item.url.options.attributes|without('class') %}

{% extends "@atoms/links/link/link.twig" %}
{% block link_content %}
  {% include "@atoms/images/icons/_icon.twig" with {
    icon__name: item.url.options.attributes['data-icon']|default(item.icon),
    icon__blockname: menu_class,
  } %}
  <span {{ bem('text', [], menu_class) }}>{{ item.title }}</span>
{% endblock %}
