{% embed "@base/06-common/_wrapper.twig" with {
  element_attributes: element_attributes|default({})|merge({
    'data-analytics-position': 'Hero Spot',
  }),
} %}
  {% block element_content %}
    {% include "@atoms/images/image/responsive-image.twig" with {
      output_image_tag: true,
      image_src: hero.media.media.src|default(hero.image.src),
      image_attributes: hero.media.media.attributes|default(hero.image.attributes),
      image_alt: hero.media.media.alt|default(hero.image.alt),
      image_srcset: hero.media.media.srcset,
      sources: hero.media.media.sources,
      output_image_tag: hero.media.media.sources.output_image_tag,
    } %}

    <div {{ bem('content', [hero_content_modifier|default('')], hero_content_base_class) }}>
      {% if hero.title is not empty %}
        {% include "@atoms/text/headings/_heading.twig" with {
          heading_level: 1,
          heading: hero.title.title|default(hero.title),
        } %}
      {% endif %}
      {% if hero.text or hero.subtitle is not empty %}
        {% include "@atoms/text/headings/_heading.twig" with {
          heading_level: 2,
          heading: hero.text.text|default(hero.subtitle),
        } %}
      {% endif %}
    </div>
  {% endblock %}
{% endembed %}
